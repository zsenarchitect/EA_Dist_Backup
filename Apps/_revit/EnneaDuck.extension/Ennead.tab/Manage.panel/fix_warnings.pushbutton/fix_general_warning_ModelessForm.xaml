<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EnneadTab Title" Width="300" ShowInTaskbar="True"
        WindowStartupLocation="CenterScreen" ScrollViewer.VerticalScrollBarVisibility="Disabled" HorizontalContentAlignment="Center"
        Background="#FF464646" FontFamily="RomanD"  Foreground="#FFDAE8FD"  OpacityMask="#FFDAE8FD" >
    <StackPanel Margin="20" HorizontalAlignment="Stretch">
        <Label x:Name="hidden_obj" Visibility="Hidden"></Label>
        <TextBlock x:Name = "title_text" Text = "title_text's text" Grid.Column="0" HorizontalAlignment="Left"     FontWeight="Bold" FontSize="18" />
        <TextBlock x:Name = "sub_text_counter" Text = "simple_text's text" Grid.Column="0" HorizontalAlignment="Left"     FontWeight="Bold"/>
        <TextBlock x:Name = "sub_text" Text = "simple_text's text" Grid.Column="0" HorizontalAlignment="Left"     FontWeight="Bold"/>
        <Button x:Name ="primary_button" Content = "primary_button's text"  Margin="0,5" Click="primary_button_click" Visibility = "Visible">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="3"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name ="pick_category_button" Content = "Pick Warning Category"  Margin="0,2" Click="pick_warning_category" Visibility = "Visible">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="3"/>
                </Style>
            </Button.Resources>
        </Button>
        <TextBlock x:Name = "category_text" Text = "xxxxxxxx" Grid.Column="0" HorizontalAlignment="Left"     FontWeight="Bold" TextWrapping="Wrap"/>
        <Button x:Name ="close_button" Content = "Close"  Margin="0,20,0,0" Click="close_button_click" Visibility = "Visible">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="3"/>
                </Style>
            </Button.Resources>
        </Button>

    </StackPanel>
</Window>
